<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AppBackgroundColor"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/title_bar"
                android:gravity="center_vertical"
                android:paddingLeft="10.0dip"
                android:text="@string/select_type"
                android:textColor="@color/TextColorWhite"
                android:textSize="18.0sp" />
        </FrameLayout>

       <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" >

            <ImageButton
                android:id="@+id/chargePhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="46dp"
                android:layout_marginTop="34dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/check_query" />


            <ImageButton
                android:id="@+id/payWater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/watchLimit"
                android:layout_alignTop="@+id/chargePhone"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/water_pay" />

            <ImageButton
                android:id="@+id/scanBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/chargePhone"
                android:layout_below="@+id/chargePhone"
                android:layout_marginTop="28dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/scan_bar" />
            
           <ImageButton
                android:id="@+id/watchLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/scanBar"
                android:layout_marginLeft="32dp"
                android:layout_toRightOf="@+id/scanBar"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/watch_limit" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>